<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

  <persistence-unit name="AllTheAmiga" transaction-type="RESOURCE_LOCAL">
    <class>com.alltheamiga.database.model.AmigaDirectory</class>
    <class>com.alltheamiga.database.model.AmigaDisk</class>
    <class>com.alltheamiga.database.model.AmigaFile</class>
    <class>com.alltheamiga.database.model.Comment</class>
    <class>com.alltheamiga.database.model.DiskRegistration</class>
    <class>com.alltheamiga.database.model.User</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/alltheamiga" />
      <property name="javax.persistence.jdbc.user" value="root" />
      <property name="javax.persistence.jdbc.password" value="" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>

</persistence>